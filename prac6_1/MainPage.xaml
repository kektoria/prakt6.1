<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prac6_1.MainPage">

    <ContentPage.Resources>
        <StyleSheetExtension Source = "styles.css"/>
    </ContentPage.Resources>

    <StackLayout HorizontalOptions="FillAndExpand"  VerticalOptions="CenterAndExpand" >

        <Label StyleId="label.wl" Text="Welcome!" VerticalTextAlignment ="Center" HorizontalTextAlignment="Center" />

        <Entry StyleId="Entry" x:Name="EntryLogin" Placeholder="Login" />

        <Entry StyleId="Entry" IsPassword="True" x:Name="EntryPassword" Placeholder="Password"/>

        <Button StyleId="Button" x:Name="ButtonSign" Text="Sing in" Clicked="ButtonSign_Clicked"/>

        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">

            <CheckBox Color="#2c2f37" Margin="25, 0, 0, 0"/>

            <Label Text="Remember me" Margin="-10, 6, 0, 0"/>

            <Label Text="Forgot" Margin="150, 5, 0, 0"/>

        </StackLayout>

    </StackLayout>

</ContentPage>
